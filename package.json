{
  "name": "planpulse",
  "displayName": "PlanPulse",
  "publisher": "Morrow",
  "repository": {
    "type": "git",
    "url": "https://github.com/Morrrow/PlanPulse.git"
  },
  "description": "可以制定项目计划，进行日常提醒和项目追踪，让我们有计划的完成项目，当我们计划的日期到了计划还没有完成时，会发出警告，让我们更有效率的完成项目的开发",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "planpulse-sidebar",
          "title": "PlanPulse",
          "icon": "resources/logo.jpeg"
        }
      ]
    },
    "views": {
      "planpulse-sidebar": [
        {
          "id": "planpulse.planView",
          "name": "我的计划"
        }
      ]
    },
    "commands": [
      {
        "command": "planpulse.addTask",
        "title": "添加计划",
        "icon": "$(add)"
      },
      {
        "command": "planpulse.completeTask",
        "title": "完成",
        "icon": "$(check)"
      },
      {
        "command": "planpulse.deleteTask",
        "title": "删除",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "planpulse.addTask",
          "when": "view == planpulse.planView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "planpulse.completeTask",
          "when": "view == planpulse.planView && viewItem != task-completed",
          "group": "inline"
        },
        {
          "command": "planpulse.deleteTask",
          "when": "view == planpulse.planView",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}